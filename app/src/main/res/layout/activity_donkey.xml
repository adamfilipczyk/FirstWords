<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".donkey"
    android:background="@drawable/bg_purple"
    android:id="@+id/listen2">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:id="@+id/picture1"
        android:layout_gravity="center_vertical"
        android:background="@drawable/donkey" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:background="@drawable/home_btn"
        android:onClick="back"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_d" />

    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/listen1"
            android:onClick="play"
            android:layout_gravity="right"
            android:background="@drawable/listend"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignEnd="@+id/top_c" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_below="@+id/listen1"
        android:layout_alignRight="@+id/top_c"
        android:layout_alignEnd="@+id/top_c"
        android:background="@drawable/selector"
        android:onClick="check"
        android:layout_marginTop="10dp"
        android:clickable="true" />

    <LinearLayout
            android:id="@+id/top_c"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/picture1"
            android:layout_marginTop="140dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donkey_e"
                android:background="@drawable/e"
                android:adjustViewBounds="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donkey_o"
                android:background="@drawable/o"
                android:layout_alignTop="@+id/donkey_e"
                android:layout_toRightOf="@+id/donkey_e"
                android:layout_toEndOf="@+id/donkey_e" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donkey_n"
                android:background="@drawable/n"
                android:layout_alignTop="@+id/donkey_e"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/donkey_o" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donkey_d"
                android:background="@drawable/d"
                android:layout_alignTop="@+id/donkey_e"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/donkey_n" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donkey_y"
                android:background="@drawable/y"
                android:layout_alignTop="@+id/donkey_e"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/donkey_d" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/donkey_k"
                android:background="@drawable/k"
                android:layout_alignTop="@+id/donkey_e"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/donkey_y" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_d"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/picture1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="0dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_o"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_d"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_n"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_o"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_k"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_n"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_e"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_k"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_y"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_e"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>

</RelativeLayout>
