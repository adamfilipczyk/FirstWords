<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".lion"
    android:background="@drawable/bg_yellow"
    android:id="@+id/listen7">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:id="@+id/picture"
        android:layout_gravity="center_vertical"
        android:background="@drawable/lion"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:background="@drawable/home_btn"
        android:onClick="back"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_l" />

    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/listen"
            android:onClick="play"
            android:layout_gravity="right"
            android:background="@drawable/listend"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignEnd="@+id/top_c" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton6"
        android:layout_below="@+id/listen"
        android:layout_alignRight="@+id/top_c"
        android:layout_alignEnd="@+id/top_c"
        android:background="@drawable/selector"
        android:onClick="check"
        android:layout_marginTop="10dp"
        android:clickable="true" />

    <LinearLayout
            android:id="@+id/top_c"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/picture"
            android:layout_marginTop="140dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lion_n"
                android:background="@drawable/n"
                android:adjustViewBounds="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lion_o"
                android:background="@drawable/o"
                android:layout_alignTop="@+id/lion_n"
                android:layout_toRightOf="@+id/lion_n"
                android:layout_toEndOf="@+id/lion_n" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lion_l"
                android:background="@drawable/l"
                android:layout_alignTop="@+id/lion_n"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/lion_o" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lion_i"
                android:background="@drawable/i"
                android:layout_alignTop="@+id/lion_n"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/lion_l" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_l"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/picture"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_i"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_l"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_o"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_i"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_n"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_o"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>

</RelativeLayout>
