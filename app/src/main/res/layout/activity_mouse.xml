<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".mouse"
    android:background="@drawable/bg_green"
    android:id="@+id/listen8">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="210dp"
        android:id="@+id/picture"
        android:layout_gravity="center_vertical"
        android:background="@drawable/mouse" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:background="@drawable/home_btn"
        android:onClick="back"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_m" />

    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/listen"
            android:onClick="play"
            android:layout_gravity="right"
            android:background="@drawable/listend"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/top_c" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:layout_below="@+id/listen"
        android:layout_alignRight="@+id/top_c"
        android:layout_alignEnd="@+id/top_c"
        android:background="@drawable/selector"
        android:onClick="check"
        android:layout_marginTop="10dp"
        android:clickable="true" />

    <LinearLayout
            android:id="@+id/top_c"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/picture"
            android:layout_marginTop="140dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mouse_s"
                android:background="@drawable/s"
                android:adjustViewBounds="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mouse_o"
                android:background="@drawable/o"
                android:layout_alignTop="@+id/mouse_s"
                android:layout_toRightOf="@+id/mouse_s"
                android:layout_toEndOf="@+id/mouse_s" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mouse_m"
                android:background="@drawable/m"
                android:layout_alignTop="@+id/mouse_s"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/mouse_o" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mouse_e"
                android:background="@drawable/e"
                android:layout_alignTop="@+id/mouse_s"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/mouse_m" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mouse_u"
                android:background="@drawable/u"
                android:layout_alignTop="@+id/mouse_s"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/mouse_e" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_m"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/picture"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_o"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_m"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_u"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_o"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_s"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_u"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_e"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_s"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>

</RelativeLayout>
