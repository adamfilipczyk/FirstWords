<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".zebra"
    android:background="@drawable/bg_yellow"
    android:id="@+id/listen13">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="205dp"
        android:id="@+id/picture"
        android:layout_gravity="center_vertical"
        android:background="@drawable/zebra"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton11"
        android:background="@drawable/home_btn"
        android:onClick="back"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_z" />

    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/listen"
            android:clickable="true"
            android:onClick="play"
            android:layout_gravity="right"
            android:background="@drawable/listend"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/top_c"
            android:layout_alignRight="@+id/listen"
            android:layout_below="@+id/listen"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:onClick="check" />

        <LinearLayout
            android:id="@+id/top_c"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="140dp"
            android:layout_alignRight="@+id/listen">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zebra_a"
                android:background="@drawable/a"
                android:adjustViewBounds="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zebra_r"
                android:background="@drawable/r"
                android:layout_alignTop="@+id/zebra_a"
                android:layout_toRightOf="@+id/zebra_a"
                android:layout_toEndOf="@+id/zebra_a" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zebra_z"
                android:background="@drawable/z"
                android:layout_alignTop="@+id/zebra_a"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/zebra_r" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zebra_b"
                android:background="@drawable/b"
                android:layout_alignTop="@+id/zebra_a"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/zebra_z" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zebra_e"
                android:background="@drawable/e"
                android:layout_alignTop="@+id/zebra_a"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/zebra_b" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_z"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c"
            android:layout_toLeftOf="@+id/bottom_e">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_e"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c"
            android:layout_toLeftOf="@+id/bottom_b">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_b"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c"
            android:layout_toLeftOf="@+id/bottom_r">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_r"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c"
            android:layout_toLeftOf="@+id/bottom_a">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_a"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c"
            android:layout_alignRight="@+id/listen">
        </LinearLayout>

</RelativeLayout>
