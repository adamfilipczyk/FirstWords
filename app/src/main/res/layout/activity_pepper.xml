<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listen14"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_beige"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".pepper">


    <ImageView
        android:id="@+id/picture"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/pepper" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:background="@drawable/home_btn"
        android:onClick="back"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_p" />

    <ImageButton
        android:id="@+id/listen"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:background="@drawable/listend"
        android:onClick="play" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_check"
        android:layout_below="@+id/listen"
        android:layout_alignRight="@+id/listen"
        android:layout_alignEnd="@+id/top_c"
        android:onClick="check"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="@drawable/selector" />

    <LinearLayout
        android:id="@+id/bottom_p"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/bottom_e">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_e"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/bottom_p2">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_p2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/bottom_p3">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_p3"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/bottom_e2">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_e2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/bottom_r">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_r"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_alignRight="@+id/listen">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_c"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:layout_alignRight="@+id/listen">

        <ImageView
            android:id="@+id/pepper_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/r" />

        <ImageView
            android:id="@+id/pepper_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/p" />

        <ImageView
            android:id="@+id/pepper_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/e" />

        <ImageView
            android:id="@+id/pepper_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/p" />
        <ImageView
            android:id="@+id/pepper_e2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/e" />
        <ImageView
            android:id="@+id/pepper_p3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/p" />
    </LinearLayout>

</RelativeLayout>
