<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listen10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_brown"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".rabbit">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="145dp"
        android:layout_height="205dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rabit" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:background="@drawable/home_btn"
        android:onClick="back"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_r" />

    <ImageButton
        android:id="@+id/listen"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:background="@drawable/listend"
        android:clickable="true"
        android:onClick="play"
        android:layout_alignEnd="@+id/top_c" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/top_c"
        android:layout_alignRight="@+id/top_c"
        android:layout_below="@+id/listen"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector"
        android:clickable="true"
        android:onClick="check" />

    <LinearLayout
        android:id="@+id/top_c"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:layout_toRightOf="@+id/picture">

        <ImageView
            android:id="@+id/rabbit_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="false"
            android:background="@drawable/a" />

        <ImageView
            android:id="@+id/rabbit_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rabbit_a"
            android:layout_toEndOf="@+id/rabbit_a"
            android:layout_toRightOf="@+id/rabbit_a"
            android:background="@drawable/b" />

        <ImageView
            android:id="@+id/rabbit_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rabbit_a"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/rabbit_b"
            android:background="@drawable/r" />

        <ImageView
            android:id="@+id/rabbit_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rabbit_a"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/rabbit_r"
            android:background="@drawable/b" />

        <ImageView
            android:id="@+id/rabbit_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rabbit_a"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/rabbit_b2"
            android:background="@drawable/t" />

        <ImageView
            android:id="@+id/rabbit_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rabbit_a"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/rabbit_t"
            android:background="@drawable/i" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_r"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/picture"
        android:background="#000000"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_a"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/bottom_r"
        android:background="#000000"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_b"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/bottom_a"
        android:background="#000000"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_b2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/bottom_b"
        android:background="#000000"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_i"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/bottom_b2"
        android:background="#000000"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_t"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/bottom_i"
        android:background="#000000"
        android:orientation="horizontal"></LinearLayout>

</RelativeLayout>
