<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".elephant"
    android:background="@drawable/bg_pink"
    android:id="@+id/listen3">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:id="@+id/picture"
        android:layout_gravity="center_vertical"
        android:background="@drawable/elephant" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:background="@drawable/home_btn"
        android:onClick="back"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_e" />

    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/listen1"
            android:onClick="play"
            android:layout_gravity="right"
            android:background="@drawable/listend"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/top_c" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/listen1"
        android:layout_alignRight="@+id/top_c"
        android:layout_alignEnd="@+id/top_c"
        android:background="@drawable/selector"
        android:onClick="check"
        android:layout_marginTop="10dp"
        android:clickable="true" />

    <LinearLayout
            android:id="@+id/bottom_e"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/picture"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_l"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_e"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_e2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_l"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_p"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_e2"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_h"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_p"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_a"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_h"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_n"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_a"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_t"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@+id/bottom_n"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:layout_marginLeft="1dp"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_c"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/picture"
            android:layout_marginTop="140dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elephant_e"
                android:background="@drawable/e"
                android:adjustViewBounds="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elephant_l"
                android:background="@drawable/l"
                android:layout_alignTop="@+id/elephant_e"
                android:layout_toRightOf="@+id/elephant_e"
                android:layout_toEndOf="@+id/elephant_e" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elephant_n"
                android:background="@drawable/n"
                android:layout_alignTop="@+id/elephant_e"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/elephant_l" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elephant_e2"
                android:background="@drawable/e"
                android:layout_alignTop="@+id/elephant_e"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/elephant_n" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elephant_t"
                android:background="@drawable/t"
                android:layout_alignTop="@+id/elephant_e"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/elephant_e2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elephant_p"
                android:background="@drawable/p"
                android:layout_alignTop="@+id/elephant_e"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/elephant_t" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elephant_h"
                android:background="@drawable/h"
                android:layout_alignTop="@+id/elephant_e"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/elephant_p" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/elephant_a"
                android:background="@drawable/a"
                android:layout_alignTop="@+id/elephant_e"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/elephant_h" />
        </LinearLayout>

</RelativeLayout>
