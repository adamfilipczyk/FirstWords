<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listen14"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_orange2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".radish">


    <ImageView
        android:id="@+id/picture"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/radish" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:background="@drawable/home_btn"
        android:onClick="back"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_r" />

    <ImageButton
        android:id="@+id/listen"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:background="@drawable/listend"
        android:onClick="play" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_check"
        android:layout_below="@+id/listen"
        android:layout_alignRight="@+id/listen"
        android:layout_alignEnd="@+id/top_c"
        android:onClick="check"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:background="@drawable/selector" />

    <LinearLayout
        android:id="@+id/bottom_r"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/bottom_a">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_a"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/bottom_d">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_d"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/bottom_i">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_i"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/bottom_s">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_s"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/bottom_h">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_h"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:layout_alignRight="@+id/listen">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_c"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:layout_alignRight="@+id/listen">

        <ImageView
            android:id="@+id/radish_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/a" />

        <ImageView
            android:id="@+id/radish_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/d" />

        <ImageView
            android:id="@+id/radish_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/s" />

        <ImageView
            android:id="@+id/radish_i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/i" />
        <ImageView
            android:id="@+id/radish_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/r" />

        <ImageView
            android:id="@+id/radish_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/h" />
    </LinearLayout>

</RelativeLayout>
