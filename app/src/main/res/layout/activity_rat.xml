<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".rat"
    android:background="@drawable/bg_blue2"
    android:id="@+id/listen11">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="210dp"
        android:id="@+id/picture"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rat" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:background="@drawable/home_btn"
        android:onClick="back"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_r" />

    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/listen"
            android:clickable="true"
            android:onClick="play"
            android:layout_gravity="right"
            android:background="@drawable/listend"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/top_c"
        android:layout_below="@+id/listen"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector"
        android:clickable="true"
        android:onClick="check"
        android:layout_alignRight="@+id/listen" />

        <LinearLayout
            android:id="@+id/top_c"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="140dp"
            android:layout_alignRight="@+id/listen">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rat_a"
                android:background="@drawable/a"
                android:adjustViewBounds="false"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rat_r"
                android:background="@drawable/r"
                android:layout_alignTop="@+id/rabbit_a"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rat_t"
                android:background="@drawable/t"
                android:layout_alignTop="@+id/rabbit_a"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/rabbit_r" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_r"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:layout_below="@+id/top_c"
            android:layout_toLeftOf="@+id/bottom_a">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_a"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:layout_marginLeft="1dp"
            android:layout_below="@+id/top_c"
            android:layout_toLeftOf="@+id/bottom_t">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_t"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:layout_marginLeft="1dp"
            android:layout_below="@+id/top_c"
            android:layout_alignRight="@+id/listen">
        </LinearLayout>

</RelativeLayout>
