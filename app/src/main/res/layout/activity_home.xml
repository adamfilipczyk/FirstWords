<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_yellow_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.firstwords.home">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/logo_small"
        android:layout_gravity="center" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/layout_start">

            <ImageButton
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:id="@+id/btn_start"
                android:background="@drawable/play_btn"
                android:layout_gravity="center"
                android:onClick="play" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/layout_info">

            <ImageButton
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:id="@+id/btn_info"
                android:background="@drawable/info_btn"
                android:layout_gravity="center"
                android:onClick="info" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/layout_website"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:id="@+id/btn_quit"
                android:background="@drawable/quit_btn"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="220dp"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:id="@+id/layout_youtube">

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:id="@+id/btn_youtube"
                android:background="@drawable/youtube_btn"
                android:layout_gravity="center" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>
