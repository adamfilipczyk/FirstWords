<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listen39"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_beige"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".tshirt">


    <ImageView
        android:id="@+id/picture"
        android:layout_width=" 230dp"
        android:layout_height="230dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/t_shirt" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_t"
        android:background="@drawable/home_btn"
        android:onClick="back" />

    <ImageButton
        android:id="@+id/listen"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:background="@drawable/listend"
        android:onClick="play" />

    <ImageButton
        android:id="@+id/btn_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/top_c"
        android:layout_alignRight="@+id/listen"
        android:layout_below="@+id/listen"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector"
        android:clickable="true"
        android:onClick="check" />

    <LinearLayout
        android:id="@+id/bottom_t"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_hyphen"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_hyphen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_s"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_s"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_h"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_h"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_i"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_i"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_r"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_r"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_t2"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_t2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/listen"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/top_c"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/listen"
        android:layout_marginTop="190dp"
        android:gravity="right">

        <ImageView
            android:id="@+id/tshirt_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/t" />

        <ImageView
            android:id="@+id/tshirt_i"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/i" />

        <ImageView
            android:id="@+id/tshirt_h"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/h" />

        <ImageView
            android:id="@+id/tshirt_t2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/t" />

        <ImageView
            android:id="@+id/tshirt_hyphen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/hyphen" />

        <ImageView
            android:id="@+id/tshirt_s"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/s" />

        <ImageView
            android:id="@+id/tshirt_r"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/r" />
    </LinearLayout>

</RelativeLayout>
