<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_yellow_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.firstwords.final_screen">


    <ImageView
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:id="@+id/compl"
        android:background="@drawable/completed"
        android:layout_gravity="center" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/layout_fireworks">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/fireworks"
                android:layout_gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/layout_fireworks2">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/fireworks2"
                android:layout_gravity="left"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="2"
            android:layout_column="0"
            android:id="@+id/layout_menu_btn"
            android:layout_gravity="center">

            <ImageButton
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:id="@+id/btn_menu"
                android:background="@drawable/final_menu"
                android:layout_gravity="center"
                android:onClick="back"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_row="2"
            android:layout_column="2"
            android:id="@+id/layout_reset_btn">

            <ImageButton
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:id="@+id/btn_reset"
                android:background="@drawable/final_reset"
                android:layout_gravity="center"
                android:onClick="reset"/>
        </LinearLayout>
    </GridLayout>
</LinearLayout>
