<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listen40"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_green"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".camera">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="420dp"
        android:layout_height="350dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/camera" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_c"
        android:background="@drawable/home_btn"
        android:onClick="back" />

    <ImageButton
        android:id="@+id/listen"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:background="@drawable/listend"
        android:clickable="true"
        android:onClick="play" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/top_c"
        android:layout_alignRight="@+id/listen"
        android:layout_below="@+id/listen"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector"
        android:clickable="true"
        android:onClick="check" />

    <LinearLayout
        android:id="@+id/top_c"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignRight="@+id/listen"
        android:layout_marginTop="330dp"
        android:gravity="right">

        <ImageView
            android:id="@+id/camera_a"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:adjustViewBounds="false"
            android:background="@drawable/a" />

        <ImageView
            android:id="@+id/camera_r"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/r" />

        <ImageView
            android:id="@+id/camera_c"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/c" />

        <ImageView
            android:id="@+id/camera_m"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/m" />

        <ImageView
            android:id="@+id/camera_e"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/e" />
        <ImageView
            android:id="@+id/camera_a2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/a" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_c"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/top_c"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_a"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_a"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_m"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_m"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_e"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_e"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_r"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_r"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/bottom_a2"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_a2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignRight="@+id/listen"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

</RelativeLayout>
