<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listen55"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".mug">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="550dp"
        android:layout_height="450dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/mug" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_m"
        android:background="@drawable/home_btn"
        android:onClick="back" />

    <ImageButton
        android:id="@+id/listen"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:background="@drawable/listend"
        android:clickable="true"
        android:onClick="play" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/top_c"
        android:layout_alignRight="@+id/listen"
        android:layout_below="@+id/listen"
        android:layout_marginTop="60dp"
        android:background="@drawable/selector"
        android:clickable="true"
        android:onClick="check" />

    <LinearLayout
        android:id="@+id/top_c"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_alignRight="@+id/listen"
        android:layout_marginTop="430dp"
        android:gravity="right">


        <ImageView
            android:id="@+id/mug_u"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/u_l" />
        <ImageView
            android:id="@+id/mug_g"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/g_l" />

        <ImageView
            android:id="@+id/mug_m"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/m_l" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_m"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/bottom_u"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_u"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/bottom_g"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_g"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/listen"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

</RelativeLayout>
