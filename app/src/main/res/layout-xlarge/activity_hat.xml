<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listen31"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_red"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".hat">


    <ImageView
        android:id="@+id/picture"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/hat" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/bottom_h"
        android:background="@drawable/home_btn"
        android:onClick="back" />

    <ImageButton
        android:id="@+id/listen"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:background="@drawable/listend"
        android:onClick="play" />

    <ImageButton
        android:id="@+id/btn_check"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/top_c"
        android:layout_alignRight="@+id/listen"
        android:layout_below="@+id/listen"
        android:layout_marginTop="60dp"
        android:background="@drawable/selector"
        android:clickable="true"
        android:onClick="check" />

    <LinearLayout
        android:id="@+id/bottom_h"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_below="@+id/top_c"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/bottom_a"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_a"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/bottom_t"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_t"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignRight="@+id/listen"
        android:layout_below="@+id/top_c"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="25dp"
        android:background="#000000"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_c"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_alignRight="@+id/listen"
        android:layout_marginTop="430dp"
        android:gravity="right">

        <ImageView
            android:id="@+id/hat_a"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/a_l" />

        <ImageView
            android:id="@+id/hat_h"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/h_l" />

        <ImageView
            android:id="@+id/hat_t"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/t_l"
            android:baselineAlignBottom="false" />
    </LinearLayout>

</RelativeLayout>
